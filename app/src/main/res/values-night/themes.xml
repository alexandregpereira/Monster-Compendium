<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hunter.DayNight" parent="Theme.Hunter.Dark"/>

    <style name="Theme.Hunter.Dark" parent="Theme.Hunter">
        <!--Color-->
        <item name="colorPrimary">@color/gray_scale_900</item>
        <item name="colorPrimaryVariant">@color/gray_scale_900</item>
        <item name="colorSecondary">@color/gray_scale_900</item>
        <item name="colorSecondaryVariant">@color/gray_scale_900</item>

        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/gray_scale_900_alpha_060</item>
        <item name="android:navigationBarColor">@color/black_alpha_020</item>

        <!--System/Platform attributes-->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/gray_scale_900</item>
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
    </style>

</resources>
